@model ElBuenSaborAdmin.Viewmodels.CrearStockVM

@{
    ViewData["Title"] = "Crear";
}

<h1>Crear</h1>

<h4>Ingreso</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CantidadCompradorProveedor" class="control-label"></label>
                <input asp-for="CantidadCompradorProveedor" class="form-control" />
                <span asp-validation-for="CantidadCompradorProveedor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrecioCompra" class="control-label"></label>
                <input asp-for="PrecioCompra" class="form-control" />
                <span asp-validation-for="PrecioCompra" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaCompra" class="control-label"></label>
                <input asp-for="FechaCompra" class="form-control" />
                <span asp-validation-for="FechaCompra" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="CantidadDisponible" class="form-control" value=0 />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="ArticuloID" class="form-control" value=@Model.ArticuloID />
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-id="@Model.ArticuloID">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
