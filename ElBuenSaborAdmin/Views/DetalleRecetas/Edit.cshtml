@model ElBuenSaborAdmin.Models.DetalleReceta

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Detalle Receta</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Cantidad" class="control-label"></label>
                <input asp-for="Cantidad" class="form-control" />
                <span asp-validation-for="Cantidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ArticuloID" class="control-label"></label>
                <select asp-for="ArticuloID" class="form-control" asp-items="ViewBag.ArticuloID"></select>
                <span asp-validation-for="ArticuloID" class="text-danger"></span>
            </div>
            <div class="form-group" style="display: none">
                <label asp-for="RecetaID" class="control-label"></label>
                <select asp-for="RecetaID" class="form-control" asp-items="ViewBag.RecetaID"></select>
                <span asp-validation-for="RecetaID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-idRec="@Model.RecetaID" asp-route-idArt="@Model.ArticuloID">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
