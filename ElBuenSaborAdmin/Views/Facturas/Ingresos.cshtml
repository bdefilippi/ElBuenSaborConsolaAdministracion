@model ElBuenSaborAdmin.Viewmodels.IngresosVM

@{
    ViewData["Title"] = "Ingresos";
}

<h1>Ingresos</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="GenerarReporteIngresos" target="_blank" method="get">
            <div class="form-group">
                <label asp-for="Fecha" class="control-label"></label>
                <input asp-for="Fecha" class="form-control"  type="month" />
            </div>
            <div class="form-group">
                <input type="submit" value="Generar Reporte" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Home" asp-action="Informes">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
