@model ElBuenSaborAdmin.Viewmodels.IndexPrecioVentaArticuloVM

@{
    ViewData["Title"] = "Precios de Venta";
}

<h1>Precios de Venta</h1>
<h2></h2>

<p>
    <a asp-action="Create" asp-route-id="@Model.ArticuloID" value="Guardar" class="btn btn-primary">Crear Nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PrecioVentaArticulos[0].PrecioVenta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrecioVentaArticulos[0].Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrecioVentaArticulos[0].Articulo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.PrecioVentaArticulos) {
        <tr>
            <td>
                $@Html.DisplayFor(modelItem => item.PrecioVenta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Articulo.Denominacion)
            </td>
            <td>
                <div class="dropdown">
                    <button class="btn btn-outline-light dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                        <img src="~/images/bootstrap-icons-1.5.0/list.svg" />
                    </button>

                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                        <li><a class="dropdown-item" asp-action="Edit" asp-route-id="@item.Id">Editar</a></li>
                        <li><a class="dropdown-item" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a></li>
                    </ul>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
<a asp-action="Index" asp-controller="Articulos">Regresar</a>
